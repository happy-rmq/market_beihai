                        android:id="@+id/sign"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:hint="@string/not_filled"
