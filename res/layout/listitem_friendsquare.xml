<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingRight="10dp"
              android:paddingTop="15dip">

    <ImageView
            android:id="@+id/friendsquare_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:src="@drawable/icon"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/friendsquare_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue21"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/friendsquare_share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="分享了一个链接"
                    android:textColor="@color/black90"
                    android:textSize="16sp"
                    android:visibility="gone"/>
        </LinearLayout>

        <TextView
                android:id="@+id/friendsquare_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

        <LinearLayout
                android:id="@+id/friendsquare_share_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/hui50"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/friendsquare_shareimg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/albumshareurl_icon"/>

            <TextView
                    android:id="@+id/friendsquare_sharetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/friendsquare_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/moren"
                android:visibility="gone"/>

        <GridView
                android:id="@+id/friendsquare_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="2dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="2dp"
                android:visibility="gone">
        </GridView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/friendsquare_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1dp"
                    android:textColor="@color/write9e"
                    android:textSize="10sp"/>

            <TextView
                    android:id="@+id/friendsquare_delete_tv"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="100"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="1dp"
                    android:text="删除"
                    android:textColor="@color/write9e"
                    android:textSize="10sp"
                    android:visibility="invisible"/>

            <TextView
                    android:id="@+id/friendsquare_tv_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="-1dp"
                    android:padding="5dp"
                    android:textColor="#fea201"
                    android:textSize="13sp"
                    android:visibility="invisible"/>

            <TextView
                    android:id="@+id/friendsquare_tv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:padding="5dp"
                    android:textColor="#fea201"
                    android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/friendsquare_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/friendsquare_z_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/friendactivity_comment_detail_list_"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:textColor="@color/blue21"
                    android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>