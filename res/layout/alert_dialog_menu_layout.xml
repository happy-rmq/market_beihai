<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_contacts_menu_dialog"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
                android:id="@+id/dialog_text"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="删除我的评论"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="gone"/>

        <Button
                android:id="@+id/dialog_taking_bt"
                style="@style/contacts_menu_btn"
                android:background="@drawable/red_bt"
                android:textColor="@color/white"/>

        <Button
                android:id="@+id/dialog_select_bt"
                style="@style/contacts_menu_btn"
                android:background="@drawable/red_bt"
                android:textColor="@color/white"/>

        <Button
                android:id="@+id/btn_cancel"
                style="@style/contacts_menu_btn"
                android:layout_marginTop="20dp"
                android:background="@drawable/gray_bt"
                android:text="@string/cancel"
                android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>