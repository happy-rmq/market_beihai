<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="10dp"
              android:id="@+id/ll_message_more">

    <LinearLayout
            android:id="@+id/ll_home_itme1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bg_selected1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

        <TextView
                android:id="@+id/tv_active_message_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_active_message_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#333333"
                android:textSize="12sp"/>

        <ImageView
                android:id="@+id/iv_active_message_image"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dip"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/moren"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/tv_active_message_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:ellipsize="end"
                android:lineSpacingExtra="5dip"
                android:maxLines="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#333333"
                android:textSize="14sp"/>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/line_white"/>

        <LinearLayout
                android:id="@+id/ll_home_go"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

            <TextView
                    android:id="@+id/tv_active_message_enter_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

            <ImageView
                    android:id="@+id/bt_active_message_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:gravity="right"
                    android:src="@drawable/common_arrow"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>