<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="15dp">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_pref_bg"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
                android:id="@+id/sharedialo_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="问卷调查编辑"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/sharedialo_url"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxEms="2"
                android:maxLength="100"
                android:maxLines="1"
                android:text="http://124.207.35.137:8085"
                android:textColor="@color/black90"/>

        <EditText
                android:id="@+id/sharedialo_speak"
                style="@style/active_send_input"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_active_send"
                android:hint="说些什么"
                android:maxLines="1"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp">

            <Button
                    android:id="@+id/sharedialo_cancel"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/net_warn_btn_normal"
                    android:text="取消"/>

            <View
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/sharedialo_send"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_nine_normal"
                    android:text="发送"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>