<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="left"
              android:orientation="horizontal"
              android:paddingTop="10dp">

    <ImageView
            android:id="@+id/msg_table_text_headportrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:src="@drawable/icon"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_table_text_left"
            android:orientation="vertical">

        <TextView
                android:id="@+id/msg_table_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:text="欢迎参加本次展会！电价标题连接或者在下方对话框输入左侧关键字，将了解详细信息。"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_list_or_image_text"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_active_table_title"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/msg_table_text_keyword1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="关键字"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/msg_table_text_function1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="功能"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
            </LinearLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_message_list_division"/>

            <LinearLayout
                    android:id="@+id/msg_table_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>